{
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "keyword-spacing": ["error"],
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": [
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/jsx-one-expression-per-line": [
      {
        "allow": "single-child"
      }
    ],
    "react/jsx-closing-bracket-location": [
      {
        "location": "after-props"
      }
    ]
  }
}
